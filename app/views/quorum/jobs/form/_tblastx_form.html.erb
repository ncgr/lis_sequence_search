<%= f.fields_for :tblastx_job do |n| %>
  <p>
    <strong>tblastx</strong>
    <%= n.check_box :queue %>
  </p>
  <div id="tblastx" class="toggle">
    <table class="options">
      <tr>
        <td>
          <label>Database(s)</label>
        </td>
        <td>
          <%= n.select :blast_dbs, @blast_dbs[:tblastx], {}, { :multiple => true } %>
        </td>
        <td>
          <%= n.label :filter, "SEG" %>
        </td>
        <td>
          <%= n.select :filter, [['Yes', true],['No', false]] %>
        </td>
      </tr>
      <tr>
        <td>
          <%= n.label :expectation %>
        </td>
        <td>
          <%= n.text_field :expectation, :size => 15, :title => "5e-20",
            :class => "auto-hint" %>
        </td>
        <td>
          <%= n.label :min_bit_score %>
        </td>
        <td>
          <%= n.text_field :min_bit_score, :size => 15, :title => "0",
            :class => "auto-hint" %>
        </td>
      </tr>
      <tr>
        <td>
           <%= n.label :max_target_seqs, "Max target sequences" %>
        </td>
        <td>
          <%= n.text_field :max_target_seqs, :size => 15, :title => "25",
            :class => "auto-hint" %>
        </td>
        <td></td>
        <td></td>
      </tr>
    </table>
  </div>
<% end %>
